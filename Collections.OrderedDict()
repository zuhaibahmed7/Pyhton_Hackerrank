# Enter your code here. Read input from STDIN. Print output to STDOUT

from collections import OrderedDict
N = int(input())
items = OrderedDict()
for _ in range(N):
    line = input().rsplit(' ', 1)
    name = line[0]
    item_price = int(line[1])
    
    if name in items:
        items[name] += item_price
    else:
        items[name] = item_price
    
for item, total in items.items():
    print(item, total)
    
    
